[Unit]
Description=OK Monitor Device Update Timer
Documentation=https://github.com/atxapple/okmonitor

[Timer]
# Run at 02:00 every day
OnCalendar=*-*-* 02:00:00

# Also run 5 minutes after boot (for devices offline at 2 AM)
OnBootSec=5min

# If the system was off at 02:00, run when it next boots
Persistent=true

# Add random delay up to 5 minutes to avoid all devices updating simultaneously
RandomizedDelaySec=5min

[Install]
WantedBy=timers.target
